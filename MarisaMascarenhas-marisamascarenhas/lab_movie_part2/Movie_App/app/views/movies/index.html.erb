
<h2>See the collection of movies </h2>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Desription</th>
      <th>Year</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.description %></td>
        <td><%= movie.year_released %></td>
        <td><%= movie.rating%></td>
        <td><%= link_to 'Show', movie_path(movie) %></td>
       <td><%= link_to 'Edit', edit_movie_path(movie) %></td>       
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3>
<%=form_tag movies_path,method:'Get' do %>
  <%=text_field_tag :q, params[:q]%>
  <%=submit_tag 'Search' %>
<%end%>
</h3>

<h3>
<%= link_to 'Add a new Movie', new_movie_path%>
</h3>